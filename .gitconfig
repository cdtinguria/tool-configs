  email = chetan.tinguria@gmail.com
[alias]
  st = status
  co = checkout
  br = branch
  cm = commit
  logg = log --pretty=oneline -n 10 --graph --abbrev-commit
  aliases = config --get-regexp alias
  
  # Show verbose output about tags, branches or remotes
  tags = tag -l
  branches = branch -a
  remotes = remote -v

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletion
  new = green # additions
